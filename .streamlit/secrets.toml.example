# Streamlit Secrets Configuration Template
# Copy this file to secrets.toml and fill in your actual values
# NEVER commit secrets.toml to version control!

[database]
# For local development (SQLite)
type = "sqlite"
path = "database/learnflow.db"

# For production (PostgreSQL on Streamlit Cloud)
# Uncomment and configure these when deploying:
# type = "postgresql"
# host = "your-db-host.supabase.co"
# port = 5432
# database = "postgres"
# user = "postgres"
# password = "your-secure-password"

[llm]
# LLM Provider Configuration
# Choose one: "groq", "ollama", or "openai"
provider = "ollama"

# For Groq (recommended for production)
# groq_api_key = "gsk_..."
# model = "mixtral-8x7b-32768"

# For Ollama (local development)
# ollama_base_url = "http://localhost:11434"
# model = "llama3.2"

# For OpenAI
# openai_api_key = "sk-..."
# model = "gpt-4o-mini"

[app]
# Application settings
max_paths_per_user = 3
modules_per_topic = 8
